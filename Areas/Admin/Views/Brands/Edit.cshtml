@model BTL.Models.Brands
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<section class="content" style="padding-top: 20px">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card card-primary">
                    <div class="card-header">
                        <h3 class="card-title">Cập nhật nhãn hàng</h3>
                    </div>

                    <form action="/Admin/Brands/Edit" method="POST" enctype="multipart/form-data">
                        <div class="card-body">
                            <div class="form-group">
                                <label for="exampleInputEmail1"> Mã nhãn hàng</label>
                                <input type="text" value="@Model.BrandId" name="BrandId" class="form-control" id="exampleInputEmail1" readonly>
                            </div>
                            <div class="form-group">
                                <label for="exampleInputEmail1"> Tên nhãn hàng</label>
                                <input type="text" value="@Model.NameBrand" name="NameBrand" class="form-control" id="exampleInputEmail1" placeholder="Nhập tên nhãn hàng">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputEmail1"> Ảnh nhãn hàng</label>
                                <br>
                                <img src="~/brands/@Model.Image" width="20%">
                                <input type="file" class="form-control-file" name="Images" id="exampleFormControlFile1">
                                <input type="hidden" name="Image" value="@Model.Image">
                            </div>

                            <div class="form-group">
                                <label for="exampleInputPassword1">Trạng thái</label>
                                <br>
                                <input type="radio" name="Status" value="true" @(Model.Status == true ? "checked" : "")>Sử dụng
                                <input type="radio" name="Status" value="false" @(Model.Status == false ? "checked" : "")>Không sử dụng
                            </div>
                        </div>

                        <div class="card-footer">
                            <button type="submit" class="btn btn-primary">Ghi thông tin</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>








