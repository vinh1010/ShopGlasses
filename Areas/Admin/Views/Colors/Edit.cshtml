@model BTL.Models.Colors
@{
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<section class="content" style="padding-top: 20px">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="card card-primary">
                    <div class="card-header">
                        <h3 class="card-title">Cập nhật màu sắc</h3>
                    </div>

                    <form action="/Admin/Colors/Edit" method="POST">
                        <div class="card-body">
                            <div class="form-group">
                                <label for="exampleInputEmail1"> Mã màu sắc</label>
                                <input type="text" value="@Model.ColorId" name="ColorId" class="form-control" id="exampleInputEmail1" readonly>
                            </div>
                            <div class="form-group">
                                <label for="exampleInputEmail1"> Tên màu sắc</label>
                                <input type="text" value="@Model.NameColor" name="NameColor" class="form-control" id="exampleInputEmail1" placeholder="Nhập tên màu sắc">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputPassword1">Trạng thái</label>
                                <br>
                                <input type="radio" name="Status" value="true" @(Model.Status == true ? "checked" : "")>Sử dụng
                                <input type="radio" name="Status" value="false" @(Model.Status == false ? "checked" : "")>Không sử dụng
                            </div>
                        </div>

                        <div class="card-footer">
                            <button type="submit" class="btn btn-primary">Ghi thông tin</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>







