@model IEnumerable<BTL.Models.Accounts>
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="main">
    <div class="container">
        <ul class="breadcrumb">
            <li><a asp-action="Index" asp-controller="Home">Trang chủ</a></li>
            <li class="active">Đăng ký tài khoản</li>
        </ul>
        <div class="d-lg-flex half" style="width: 50%;margin-left: 25%;">
            <div class="contents order-2 order-md-1">
                <div class="container" style="margin-top: 100px;margin-bottom: 100px">
                    <div class="row align-items-center justify-content-center">
                        <div class="col-md-7">
                            <h3 class="text-center">Đăng ký tài khoản </h3>
                            <form action="/Login/Register" method="post">
                                <div class="form-group first">
                                    <label for="username">Tên của bạn</label>
                                    <input type="text" name="UserName" class="form-control" placeholder="Nhập tên của bạn">
                                    <b class="text-danger">@ViewBag.Name</b>
                                </div>
                                <div class="form-group first">
                                    <label for="username">Email đăng ký</label>
                                    <input type="text" name="Email" class="form-control" placeholder="Nhập email của bạn">
                                    <b class="text-danger">@ViewBag.Email</b>
                                    <b class="text-danger">@ViewBag.checkEmail</b>
                                </div>
                                <div class="form-group last mb-3">
                                    <label for="password">Nhập mật khẩu</label>
                                    <input type="password" name="Password" class="form-control" placeholder="Nhập mật khẩu">
                                    <b class="text-danger">@ViewBag.Pass</b>
                                </div>
                                <div class="form-group last mb-3">
                                    <label for="password">Nhập lại mật khẩu</label>
                                    <input type="password" name="cfpass" class="form-control" placeholder="Nhập lại mật khẩu">
                                    <b class="text-danger">@ViewBag.Cfpass</b>
                                    <b class="text-danger">@ViewBag.CfpassErr</b>
                                </div>

                                <input type="submit" value="Đăng Ký" class="btn btn-block btn-primary">
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


